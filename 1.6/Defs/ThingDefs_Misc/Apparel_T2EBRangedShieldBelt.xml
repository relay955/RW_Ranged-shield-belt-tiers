    <statBases>
      <EnergyShieldEnergyMax>0.9</EnergyShieldEnergyMax>
      <EnergyShieldRechargeRate>0.0075</EnergyShieldRechargeRate>
      <ChargeDurationPerBattery>360</ChargeDurationPerBattery>
      <Mass>3</Mass>
    </statBases>
    <costList>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.4</MoveSpeed>
      <WorkSpeedGlobal>-0.22</WorkSpeedGlobal>
    </equippedStatOffsets>
    <recipeMaker>
      <researchPrerequisite>ShieldModularSystem</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
</Defs>
